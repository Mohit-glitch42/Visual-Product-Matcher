{
  "version": 2,
  "builds": [
    {
      "src": "root-repo/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "root-repo/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/root-repo/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/root-repo/frontend/build/$1"
    }
  ]
}
